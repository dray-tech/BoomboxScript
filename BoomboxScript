-- =========================
-- FUNCTIONS
-- =========================
local function clearList()
    for _, v in pairs(list:GetChildren()) do
        if v:IsA("Frame") then
            v:Destroy()
        end
    end
end

local selectedTrack = nil

local function createButton(info)
    local frame = Instance.new("Frame", list)
    frame.Size = UDim2.new(1,0,0,40)
    frame.BackgroundColor3 = Color3.fromRGB(35,35,35)
    frame.BorderSizePixel = 0
    Instance.new("UICorner", frame).CornerRadius = UDim.new(0,8)

    local label = Instance.new("TextLabel", frame)
    label.Size = UDim2.new(0.7,0,1,0)
    label.Position = UDim2.new(0,5,0,0)
    label.Text = info.Name
    label.TextColor3 = Color3.fromRGB(255,255,255)
    label.Font = Enum.Font.Gotham
    label.TextSize = 14
    label.BackgroundTransparency = 1
    label.TextXAlignment = Enum.TextXAlignment.Left

    local copyBtn = Instance.new("TextButton", frame)
    copyBtn.Size = UDim2.new(0.3, -5, 1, -5)
    copyBtn.Position = UDim2.new(0.7,5,0,2)
    copyBtn.Text = "Copy ID"
    copyBtn.Font = Enum.Font.GothamBold
    copyBtn.TextSize = 14
    copyBtn.TextColor3 = Color3.fromRGB(255,255,255)
    copyBtn.BackgroundColor3 = Color3.fromRGB(70,70,70)
    Instance.new("UICorner", copyBtn).CornerRadius = UDim.new(0,6)

    copyBtn.MouseEnter:Connect(function()
        TweenService:Create(copyBtn, TweenInfo.new(0.15), {BackgroundColor3 = Color3.fromRGB(100,100,100)}):Play()
    end)
    copyBtn.MouseLeave:Connect(function()
        TweenService:Create(copyBtn, TweenInfo.new(0.15), {BackgroundColor3 = Color3.fromRGB(70,70,70)}):Play()
    end)

    copyBtn.MouseButton1Click:Connect(function()
        setclipboard(info.Id)
        frame.BackgroundColor3 = Color3.fromRGB(70,130,180)
        wait(0.3)
        frame.BackgroundColor3 = Color3.fromRGB(35,35,35)
    end)

    frame.MouseButton1Click:Connect(function()
        if selectedTrack then
            selectedTrack.BackgroundColor3 = Color3.fromRGB(35,35,35)
        end
        selectedTrack = frame
        frame.BackgroundColor3 = Color3.fromRGB(60,60,60)
    end)
end

local function refreshList()
    clearList()
    local query = search.Text:lower()
    for _, info in pairs(MusicLibrary) do
        if info.Name:lower():find(query) then
            createButton(info)
        end
    end
end

search:GetPropertyChangedSignal("Text"):Connect(refreshList)
refreshList()

-- =========================
-- CLOSE / MINIMIZE
-- =========================
close.MouseButton1Click:Connect(function()
    gui.Enabled = false
end)

mini.MouseButton1Click:Connect(function()
    bg.Size = UDim2.new(0,200,0,30)
    list.Visible = false
    search.Visible = false
end)

-- =========================
-- DRAGGABLE
-- =========================
local dragging = false
local dragInput, mousePos, framePos

bg.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        mousePos = input.Position
        framePos = bg.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

bg.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - mousePos
        bg.Position = UDim2.new(framePos.X.Scale, framePos.X.Offset + delta.X, framePos.Y.Scale, framePos.Y.Offset + delta.Y)
    end
end)
