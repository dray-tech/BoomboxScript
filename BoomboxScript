-- =========================
-- UI SETUP
-- =========================
local gui = Instance.new("ScreenGui", Player.PlayerGui)
gui.Name = "PremiumBoomboxGUI"
gui.ResetOnSpawn = false

local main = Instance.new("Frame", gui)
main.Size = UDim2.fromScale(0.35, 0.45)
main.Position = UDim2.fromScale(0.325, 0.275)
main.BackgroundTransparency = 1
main.ClipsDescendants = true

-- Background
local bg = Instance.new("Frame", main)
bg.Size = UDim2.fromScale(1,1)
bg.BackgroundColor3 = Color3.fromRGB(30,30,30)
bg.BackgroundTransparency = 0.2
bg.BorderSizePixel = 0
Instance.new("UICorner", bg).CornerRadius = UDim.new(0,15)

local gradient = Instance.new("UIGradient", bg)
gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(40,40,40)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(25,25,25))
}

-- Title
local title = Instance.new("TextLabel", bg)
title.Size = UDim2.new(1, -80, 0, 40)
title.Position = UDim2.new(0, 10, 0, 0)
title.Text = "ðŸŽµ Premium Boombox"
title.TextColor3 = Color3.fromRGB(255,255,255)
title.Font = Enum.Font.GothamBold
title.TextSize = 18
title.BackgroundTransparency = 1
title.TextXAlignment = Enum.TextXAlignment.Left

-- Close Button
local close = Instance.new("TextButton", bg)
close.Size = UDim2.new(0, 35, 0, 30)
close.Position = UDim2.new(1, -40, 0, 5)
close.Text = "X"
close.Font = Enum.Font.GothamBold
close.TextSize = 16
close.TextColor3 = Color3.fromRGB(255,80,80)
close.BackgroundTransparency = 1

-- Minimize Button
local mini = Instance.new("TextButton", bg)
mini.Size = UDim2.new(0, 35, 0, 30)
mini.Position = UDim2.new(1, -80, 0, 5)
mini.Text = "-"
mini.Font = Enum.Font.GothamBold
mini.TextSize = 20
mini.TextColor3 = Color3.fromRGB(255,255,255)
mini.BackgroundTransparency = 1

-- Search Box
local search = Instance.new("TextBox", bg)
search.Size = UDim2.new(1, -20, 0, 35)
search.Position = UDim2.new(0,10,0,45)
search.PlaceholderText = "Search music..."
search.Text = ""
search.Font = Enum.Font.Gotham
search.TextSize = 14
search.TextColor3 = Color3.fromRGB(255,255,255)
search.BackgroundColor3 = Color3.fromRGB(40,40,40)
search.BorderSizePixel = 0
Instance.new("UICorner", search).CornerRadius = UDim.new(0,8)

-- Scroll List
local list = Instance.new("ScrollingFrame", bg)
list.Position = UDim2.new(0, 10, 0, 90)
list.Size = UDim2.new(1, -20, 1, -100)
list.BackgroundTransparency = 1
list.ScrollBarImageTransparency = 0.6

local layout = Instance.new("UIListLayout", list)
layout.Padding = UDim.new(0,6)

-- Sound
local sound = Instance.new("Sound", workspace)
sound.Volume = 2

-- =========================
-- FUNCTIONS
-- =========================
local function clearList()
    for _, v in pairs(list:GetChildren()) do
        if v:IsA("Frame") then
            v:Destroy()
        end
    end
end

local selectedTrack = nil

local function createButton(info)
    local frame = Instance.new("Frame", list)
    frame.Size = UDim2.new(1,0,0,40)
    frame.BackgroundColor3 = Color3.fromRGB(35,35,35)
    frame.BorderSizePixel = 0
    Instance.new("UICorner", frame).CornerRadius = UDim.new(0,8)

    local label = Instance.new("TextLabel", frame)
    label.Size = UDim2.new(0.7,0,1,0)
    label.Position = UDim2.new(0,5,0,0)
    label.Text = info.Name
    label.TextColor3 = Color3.fromRGB(255,255,255)
    label.Font = Enum.Font.Gotham
    label.TextSize = 14
    label.BackgroundTransparency = 1
    label.TextXAlignment = Enum.TextXAlignment.Left

    local copyBtn = Instance.new("TextButton", frame)
    copyBtn.Size = UDim2.new(0.3, -5, 1, -5)
    copyBtn.Position = UDim2.new(0.7,5,0,2)
    copyBtn.Text = "Copy ID"
    copyBtn.Font = Enum.Font.GothamBold
    copyBtn.TextSize = 14
    copyBtn.TextColor3 = Color3.fromRGB(255,255,255)
    copyBtn.BackgroundColor3 = Color3.fromRGB(70,70,70)
    Instance.new("UICorner", copyBtn).CornerRadius = UDim.new(0,6)

    copyBtn.MouseEnter:Connect(function()
        TweenService:Create(copyBtn, TweenInfo.new(0.15), {BackgroundColor3 = Color3.fromRGB(100,100,100)}):Play()
    end)
    copyBtn.MouseLeave:Connect(function()
        TweenService:Create(copyBtn, TweenInfo.new(0.15), {BackgroundColor3 = Color3.fromRGB(70,70,70)}):Play()
    end)

    copyBtn.MouseButton1Click:Connect(function()
        setclipboard(info.Id)
        frame.BackgroundColor3 = Color3.fromRGB(70,130,180)
        wait(0.3)
        frame.BackgroundColor3 = Color3.fromRGB(35,35,35)
    end)

    frame.MouseButton1Click:Connect(function()
        if selectedTrack then
            selectedTrack.BackgroundColor3 = Color3.fromRGB(35,35,35)
        end
        selectedTrack = frame
        frame.BackgroundColor3 = Color3.fromRGB(60,60,60)
    end)
end

local function refreshList()
    clearList()
    local query = search.Text:lower()
    for _, info in pairs(MusicLibrary) do
        if info.Name:lower():find(query) then
            createButton(info)
        end
    end
end

search:GetPropertyChangedSignal("Text"):Connect(refreshList)
refreshList()

-- =========================
-- CLOSE / MINIMIZE
-- =========================
close.MouseButton1Click:Connect(function()
    gui.Enabled = false
end)

mini.MouseButton1Click:Connect(function()
    bg.Size = UDim2.new(0,200,0,30)
    list.Visible = false
    search.Visible = false
end)

-- =========================
-- DRAGGABLE
-- =========================
local dragging = false
local dragInput, mousePos, framePos

bg.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        mousePos = input.Position
        framePos = bg.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

bg.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - mousePos
        bg.Position = UDim2.new(framePos.X.Scale, framePos.X.Offset + delta.X, framePos.Y.Scale, framePos.Y.Offset + delta.Y)
    end
end)
