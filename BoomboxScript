-- Load Favorites
local Favorites = {}
pcall(function()
    if readfile and isfile and isfile(SAVE_FILE) then
        Favorites = HttpService:JSONDecode(readfile(SAVE_FILE))
    end
end)

local function saveFavorites()
    if writefile then
        writefile(SAVE_FILE, HttpService:JSONEncode(Favorites))
    end
end

-- GUI
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "UltimateBoomboxV2"

local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0,420,0,500)
main.Position = UDim2.new(0.5,-210,0.5,-250)
main.BackgroundColor3 = Color3.fromRGB(18,18,18)
main.Active = true
main.Draggable = true

local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1,0,0,40)
title.Text = "ULTIMATE BOOMBOX HUB"
title.Font = Enum.Font.GothamBold
title.TextSize = 18
title.TextColor3 = Color3.new(1,1,1)
title.BackgroundTransparency = 1

local minimize = Instance.new("TextButton", main)
minimize.Size = UDim2.new(0,40,0,30)
minimize.Position = UDim2.new(1,-45,0,5)
minimize.Text = "-"
minimize.BackgroundColor3 = Color3.fromRGB(35,35,35)
minimize.TextColor3 = Color3.new(1,1,1)

local search = Instance.new("TextBox", main)
search.Size = UDim2.new(1,-20,0,35)
search.Position = UDim2.new(0,10,0,45)
search.PlaceholderText = "Search songs..."
search.BackgroundColor3 = Color3.fromRGB(30,30,30)
search.TextColor3 = Color3.new(1,1,1)

local list = Instance.new("ScrollingFrame", main)
list.Position = UDim2.new(0,10,0,90)
list.Size = UDim2.new(1,-20,1,-160)
list.CanvasSize = UDim2.new(0,0,0,0)
list.ScrollBarImageTransparency = 0.4
list.BackgroundTransparency = 1

local layout = Instance.new("UIListLayout", list)
layout.Padding = UDim.new(0,6)

local controls = Instance.new("Frame", main)
controls.Size = UDim2.new(1,-20,0,55)
controls.Position = UDim2.new(0,10,1,-60)
controls.BackgroundTransparency = 1

local play = Instance.new("TextButton", controls)
play.Size = UDim2.new(0,80,1,0)
play.Text = "PLAY"

local stop = Instance.new("TextButton", controls)
stop.Size = UDim2.new(0,80,1,0)
stop.Position = UDim2.new(0,90,0,0)
stop.Text = "STOP"

local loopBtn = Instance.new("TextButton", controls)
loopBtn.Size = UDim2.new(0,80,1,0)
loopBtn.Position = UDim2.new(0,180,0,0)
loopBtn.Text = "LOOP: OFF"

local volume = Instance.new("TextBox", controls)
volume.Size = UDim2.new(0,80,1,0)
volume.Position = UDim2.new(1,-80,0,0)
volume.Text = "VOL 2"

for _,b in ipairs({play,stop,loopBtn,volume}) do
    b.BackgroundColor3 = Color3.fromRGB(40,40,40)
    b.TextColor3 = Color3.new(1,1,1)
end

-- Sound
local sound = Instance.new("Sound", workspace)
sound.Volume = 2

local currentIndex = nil
local minimized = false

-- Auto skip deleted IDs
local function playIndex(i)
    local song = Songs[i]
    if not song then return end

    sound.SoundId = "rbxassetid://"..song.ID
    sound:Play()

    task.delay(1, function()
        if sound.TimeLength == 0 then
            song.Deleted = true
            playIndex(i + 1)
        end
    end)
end

sound.Ended:Connect(function()
    if sound.Looped == false and currentIndex then
        playIndex(currentIndex + 1)
    end
end)

-- UI refresh
local function refresh(filter)
    list:ClearAllChildren()
    layout.Parent = list

    for i,song in ipairs(Songs) do
        if not filter or song.Name:lower():find(filter:lower()) then
            local btn = Instance.new("TextButton", list)
            btn.Size = UDim2.new(1,0,0,42)
            btn.Font = Enum.Font.Gotham
            btn.TextSize = 14
            btn.TextColor3 = Color3.new(1,1,1)

            if song.Deleted then
                btn.Text = "⛔ "..song.Name.." (Deleted)"
                btn.BackgroundColor3 = Color3.fromRGB(60,20,20)
            else
                local star = Favorites[song.ID] and "★ " or ""
                btn.Text = star..song.Name.." | "..song.ID
                btn.BackgroundColor3 = Color3.fromRGB(30,30,30)
            end

            btn.MouseButton1Click:Connect(function()
                currentIndex = i
                if setclipboard then setclipboard(song.ID) end
                Favorites[song.ID] = not Favorites[song.ID]
                saveFavorites()
                refresh(search.Text)
            end)
        end
    end

    task.wait()
    list.CanvasSize = UDim2.new(0,0,0,layout.AbsoluteContentSize.Y + 10)
end

-- Controls
play.MouseButton1Click:Connect(function()
    if currentIndex then playIndex(currentIndex) end
end)

stop.MouseButton1Click:Connect(function()
    sound:Stop()
end)

loopBtn.MouseButton1Click:Connect(function()
    sound.Looped = not sound.Looped
    loopBtn.Text = sound.Looped and "LOOP: ON" or "LOOP: OFF"
end)

volume.FocusLost:Connect(function()
    local v = tonumber(volume.Text:match("%d+"))
    if v then sound.Volume = math.clamp(v,0,10) end
end)

search:GetPropertyChangedSignal("Text"):Connect(function()
    refresh(search.Text)
end)

minimize.MouseButton1Click:Connect(function()
    minimized = not minimized
    main.Size = minimized and UDim2.new(0,200,0,40) or UDim2.new(0,420,0,500)
    for _,v in ipairs(main:GetChildren()) do
        if v ~= title and v ~= minimize then
            v.Visible = not minimized
        end
    end
end)

refresh()
