-- Favorites storage
local Favorites = {}

-- === GUI ===
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "BoomboxUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = PlayerGui

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 450, 0, 550)
MainFrame.Position = UDim2.new(0.5, -225, 0.5, -275)
MainFrame.BackgroundColor3 = Color3.fromRGB(25,25,25)
MainFrame.Parent = ScreenGui

-- Title
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1,0,0,50)
Title.Position = UDim2.new(0,0,0,0)
Title.BackgroundColor3 = Color3.fromRGB(40,40,40)
Title.Text = "Boombox Hub"
Title.TextColor3 = Color3.fromRGB(255,255,255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 28
Title.Parent = MainFrame

-- Tabs
local TabsFrame = Instance.new("Frame")
TabsFrame.Size = UDim2.new(1,0,0,40)
TabsFrame.Position = UDim2.new(0,0,0,50)
TabsFrame.BackgroundTransparency = 1
TabsFrame.Parent = MainFrame

local AllBtn = Instance.new("TextButton")
AllBtn.Text = "All Songs"
AllBtn.Size = UDim2.new(0,225,1,0)
AllBtn.Position = UDim2.new(0,0,0,0)
AllBtn.BackgroundColor3 = Color3.fromRGB(60,60,60)
AllBtn.TextColor3 = Color3.fromRGB(255,255,255)
AllBtn.Font = Enum.Font.SourceSans
AllBtn.TextSize = 20
AllBtn.Parent = TabsFrame

local FavBtn = Instance.new("TextButton")
FavBtn.Text = "Favorites"
FavBtn.Size = UDim2.new(0,225,1,0)
FavBtn.Position = UDim2.new(0,225,0,0)
FavBtn.BackgroundColor3 = Color3.fromRGB(60,60,60)
FavBtn.TextColor3 = Color3.fromRGB(255,255,255)
FavBtn.Font = Enum.Font.SourceSans
FavBtn.TextSize = 20
FavBtn.Parent = TabsFrame

-- Search Bar
local SearchBar = Instance.new("TextBox")
SearchBar.PlaceholderText = "Search..."
SearchBar.Size = UDim2.new(1,-10,0,30)
SearchBar.Position = UDim2.new(0,5,0,95)
SearchBar.Parent = MainFrame

-- Scrolling Frame
local Scroll = Instance.new("ScrollingFrame")
Scroll.Size = UDim2.new(1,0,1,-130)
Scroll.Position = UDim2.new(0,0,0,130)
Scroll.ScrollBarThickness = 8
Scroll.BackgroundTransparency = 1
Scroll.Parent = MainFrame

-- Function to populate
local function Populate(list)
    Scroll:ClearAllChildren()
    for i,song in pairs(list) do
        local Btn = Instance.new("TextButton")
        Btn.Size = UDim2.new(1,-10,0,30)
        Btn.Position = UDim2.new(0,5,0,(i-1)*35)
        Btn.Text = song.Name
        Btn.Font = Enum.Font.SourceSans
        Btn.TextSize = 18
        Btn.TextColor3 = Color3.fromRGB(255,255,255)
        Btn.BackgroundColor3 = Favorites[song.ID] and Color3.fromRGB(100,80,200) or Color3.fromRGB(40,40,40)
        Btn.Parent = Scroll

        Btn.MouseButton1Click:Connect(function()
            setclipboard(song.ID)
            warn("Copied "..song.Name.." ID: "..song.ID)
        end)

        Btn.MouseButton2Click:Connect(function()
            if Favorites[song.ID] then
                Favorites[song.ID] = nil
                Btn.BackgroundColor3 = Color3.fromRGB(40,40,40)
            else
                Favorites[song.ID] = song
                Btn.BackgroundColor3 = Color3.fromRGB(100,80,200)
            end
        end)
    end
    Scroll.CanvasSize = UDim2.new(0,0,#list*35)
end

-- Initial population
Populate(Songs)

-- Tab Buttons
AllBtn.MouseButton1Click:Connect(function()
    Populate(Songs)
end)
FavBtn.MouseButton1Click:Connect(function()
    local favList = {}
    for _, song in pairs(Favorites) do
        table.insert(favList,song)
    end
    Populate(favList)
end)

-- Search Filter
SearchBar:GetPropertyChangedSignal("Text"):Connect(function()
    local text = SearchBar.Text:lower()
    local filtered = {}
    for _, song in pairs(Songs) do
        if string.find(song.Name:lower(), text) then
            table.insert(filtered, song)
        end
    end
    Populate(filtered)
end)

-- Minimize / Open
local MinBtn = Instance.new("TextButton")
MinBtn.Size = UDim2.new(0,50,0,30)
MinBtn.Position = UDim2.new(1,-55,0,5)
MinBtn.Text = "-"
MinBtn.Parent = MainFrame

local OpenBtn = Instance.new("TextButton")
OpenBtn.Size = UDim2.new(0,100,0,30)
OpenBtn.Position = UDim2.new(0.5,-50,0,10)
OpenBtn.Text = "Open Boombox"
OpenBtn.Visible = false
OpenBtn.Parent = ScreenGui

MinBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
    OpenBtn.Visible = true
end)
OpenBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = true
    OpenBtn.Visible = false
end)
